<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trans_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/lanuncher_image_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/launcher" />

    <TextView
        android:id="@+id/downcount_times_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text=""
        android:textSize="50sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/content_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6.66dip"
        android:layout_marginTop="6.66dip"
        android:text=""
        android:textSize="15sp"
        android:visibility="gone" />

</RelativeLayout>